<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_1"
    android:layout_marginRight="@dimen/dp_1"
    android:layout_marginTop="@dimen/dp_2"
    android:background="@color/color_home"
    >

    <ImageView
        android:id="@+id/image_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/item_music"
        tools:ignore="VectorDrawableCompat"
        />

    <TextView
        android:id="@+id/text_song_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_4"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="8dp"
        android:layout_marginStart="@dimen/dp_32"
        android:maxLines="1"
        android:textColor="@color/color_primary"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toTopOf="@+id/text_song_user"
        app:layout_constraintEnd_toStartOf="@+id/image_player"
        app:layout_constraintStart_toEndOf="@+id/image_song"
        app:layout_constraintTop_toTopOf="@+id/image_song"
        />

    <ImageView
        android:id="@+id/image_player"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/text_song_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_song_name"
        app:srcCompat="@android:drawable/ic_media_pause"
        />

    <TextView
        android:id="@+id/text_song_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="8dp"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_4"
        android:maxLines="1"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@+id/image_song"
        app:layout_constraintEnd_toStartOf="@+id/image_player"
        app:layout_constraintStart_toEndOf="@+id/image_song"
        app:layout_constraintTop_toBottomOf="@+id/text_song_name"
        />

</android.support.constraint.ConstraintLayout>
