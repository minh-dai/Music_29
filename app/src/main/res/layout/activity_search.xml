<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/image_back_search"
        android:layout_width="@dimen/dp_50"
        android:padding="@dimen/dp_8"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_primary_dark"
        android:src="@drawable/ic_back"
        />

    <EditText
        android:id="@+id/edit_search"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_primary_dark"
        android:hint="@string/text_hint_search"
        android:textColor="@color/color_black"
        android:paddingLeft="@dimen/dp_10"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/image_back_search"
        app:layout_constraintEnd_toStartOf="@+id/image_search"
        app:layout_constraintStart_toEndOf="@+id/image_back_search"
        />

    <ProgressBar
        android:id="@+id/progressbar_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/image_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_fail"
        tools:ignore="VectorDrawableCompat"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recylerview_search"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_search"
        />

    <ImageView
        android:id="@+id/image_search"
        android:layout_width="@dimen/dp_50"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_primary_dark"
        app:layout_constraintBottom_toBottomOf="@+id/edit_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edit_search"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_search"
        />

</android.support.constraint.ConstraintLayout>
